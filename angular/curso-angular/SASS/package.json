{
  "name": "sass",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:sass": "sass --watch src/sass/styles.scss src/css/styles.css",
    "build:sass": "sass --style=compressed --no-source-map src/sass/styles.scss dist/projeto_sass/css/styles.css",
    "start:html": "live-server src/",
    "build:html": "copyfiles --up 1 src/*.html dist/projeto_sass",
    "build:assets": "copyfiles --up 1 src/assets/**/* dist/projeto_sass",
    "build": "npm-run-all build:*",
    "start": "npm-run-all --parallel start:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.89.2"
  }
}
